package day8;
import java.io.*;

public class TotalFileMerge {

	public static void main(String[] args) {
		// java  program to merge data from all files present in a folder into a new file
		PrintWriter pw = new PrintWriter("output.txt");
		File f = new File("D:\\Yeswanth");
		String[] s = f.list();
		for(String s1:s) {	
		    BufferedReader br1=new BufferedReader(new File(f,s1)); 
		    String line=br.readLine();     
		    while(line!=null) { 
			  pw.println(line); 
			  line=br.readLine(); 
			} 
		}

	}

}
